<main>
    <h1>Account Management</h1>

    <!-- Flash message -->
    <% if (message && message.length > 0) { %>
        <div class="notice"><%= message %></div>
    <% } %>

    <!-- Errors -->
    <% if (errors && errors.length > 0) { %>
        <ul class="errors">
        <% errors.forEach(error => { %>
            <li><%= error.msg %></li>
        <% }) %>
        </ul>
    <% } %>

    <% if (account) { %>
        <!-- Greeting -->
        <h2>Welcome <%= account.account_firstname %></h2>

        <!-- Update Account Info (visible for all) -->
        <p><a href="/account/update/<%= account.account_id %>">Update Account Info</a></p>

        <!-- Inventory Management (only for Employee/Admin) -->
        <% if (account.account_type === "Employee" || account.account_type === "Admin") { %>
            <h3>Inventory Management</h3>
            <p>Choose a classification to see those inventory items.</p>
            <%- classificationSelect %>
            <table id="inventoryDisplay"></table>
            <noscript>JavaScript must be enabled to use this page.</noscript>
            <script src="../../js/inventory"></script>
        <% } %>
    <% } %>
</main>