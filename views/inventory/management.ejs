<main>
    <h1><%= title %></h1>
    <p>Welcome <%= account ? account.account_firstname : "Guest" %></p>

    <% if (message && message.length > 0) { %>
      <div class="notice">
        <% message.forEach(msg => { %>
          <p><%= msg %></p>
        <% }) %>
      </div>
    <% } %>
<!-- Search Form -->
  <form id="inventorySearchForm" action="/inv/search" method="get">
      <input type="text" name="search" placeholder="Search vehicles..." required>
      <button type="submit">Search</button>
  </form>
    <ul>
        <li><a href="inv/add-classification">Add New Classification</a></li>
        <li><a href="inv/add-inventory">Add New Vehicle</a></li>
    </ul>
    <h2>Manage Inventory</h2>
    <p>Choose a classification to see those inventory items.</p>
    <%- classificationSelect %>
    
    <table id="inventoryDisplay"></table>


    <noscript>JavaScript must be enabled to use this page.</noscript>
    <script src="../../js/inventory"></script>
</main>

